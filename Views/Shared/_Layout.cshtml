        <div class="footerMenuAddrDiv">
            <div class="footerMenuDiv">
                <ul class="navFooter">
                    <li><a href="@Url.Action("Services", "Home")">Услуги</a></li>
                    <li><a href="@Url.Action("Team", "Home")">Команда</a></li>
                    <li><a href="#">Нам доверяют</a></li>
                    <li><a href="@Url.Action("Contacts", "Home")">Контакты</a></li>
                </ul>
            </div>
            <div class="footerAddrDiv">
                <div class="contactsIconDiv"> <img src="~/images/location.png" /></div>
                <div class="footerAddrDivText">г. Владимир, ул. Мира, дом 22</div>
            </div>
        </div>
        <div class="contactsDiv">
            <div class="contactsDivScnd">
                <div class="contactsIconDiv"> <img src="~/images/phone.png" /></div>
                <div class="contactsInfDiv">53-00-95</div>
            </div>

            <div class="contactsDivScnd">
                <div class="contactsIconDiv"> <img src="~/images/email1.png" /></div>
                <div class="contactsInfDiv">rubisdv@mail.ru</div>
            </div>

            <div class="contactsDivScnd">
                <div class="contactsIconDiv"><a href="@Url.Action("Request", "Home")"><img src="~/images/request.png" /></a></div>
                <div class="contactsInfDiv"><a href="@Url.Action("Request", "Home")">Запись на консультацию</a></div>
