    <link rel="stylesheet" type="text/css" href="~/Content/general.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/contacts.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/person.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/request.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/team.css" />
