@{
    ViewBag.Title = "Запись на консультацию";
    ViewBag.EmailPattern = "([A-z0-9_.-]{1,})@([A-z0-9_.-]{1,}).([A-z]{2,8})";
}

<div class="linkDiv">
    <a href="@Url.Action("Index", "Home")">Главная ></a>
    <a href="#"> Запись на консультацию</a>
</div>

<div class="requestDiv">
    <div>
        Отправьте заявку на
    </div>
    <div>
        консультацию
    </div>
    <div class="formDiv">

        @using (Html.BeginForm("Request", "Home", FormMethod.Post, new { enctype = "application/x-www-form-urlencoded" }))
        {
            <input name="Name" autocomplete="off" onblur="if(this.value=='') this.value='Ваше имя'" onfocus="if(this.value=='Ваше имя') this.value=''" value='Ваше имя' />
            <input name="Phone" type="tel" autocomplete="off" onblur="if(this.value=='') this.value='Телефон'" onfocus="if(this.value=='Телефон') this.value=''" value='Телефон' pattern="\+7[0-9]{10}" placeholder="+7XXXXXXXXXX" id="phone"/>
            <input name="Email" type="email" autocomplete="off" onblur="if(this.value=='') this.value='Email'" onfocus="if(this.value=='Email') this.value=''" value='Email' pattern="@ViewBag.EmailPattern" placeholder="example@mail.ru" id="email"/>
            <textarea name="Msg" autocomplete="off" onblur="if(this.value=='') this.value='Сообщение'" onfocus="if(this.value=='Сообщение') this.value=''" value='Сообщение' id="msg"></textarea>
            <input type="submit" value="Отправить" id="send" />
        }
    </div>
</div>